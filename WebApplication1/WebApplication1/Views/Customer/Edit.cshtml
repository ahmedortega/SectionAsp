@model WebApplication1.ViewModels.CustomerMemberShipViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Customer</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(c => c.Customer.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Age)
        @Html.TextBoxFor(m => m.Customer.Age, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(x => x.Customer.Age)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.MemberShipTypeID)
        @Html.DropDownListFor(m => m.Customer.MemberShipTypeID, new SelectList(Model.MemberShipTypes, "Id", "Name"), "Select MemberShip", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Customer.MemberShipTypeID)
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(m => m.Customer.IsMale)
        @Html.LabelFor(x => x.Customer.IsMale)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Update</button>
    </div>

}